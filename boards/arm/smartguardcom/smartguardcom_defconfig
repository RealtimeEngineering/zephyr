CONFIG_SOC_SERIES_STM32H7X=y
CONFIG_SOC_STM32H743XX=y
# 96MHz system clock (CubeMX Defaults)
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=96000000

# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable UART
CONFIG_SERIAL=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable Pinmux
CONFIG_PINMUX=y

# Enable GPIO
CONFIG_GPIO=y

# Clock Configuration
CONFIG_CLOCK_CONTROL=y

# External oscillator provides 16MHz clock input
CONFIG_CLOCK_STM32_HSE_CLOCK=16000000
# Use PLL output as system clock source
CONFIG_CLOCK_STM32_SYSCLK_SRC_PLL=y
# Use HSE as PLL input
CONFIG_CLOCK_STM32_PLL_SRC_HSE=y
#CONFIG_CLOCK_STM32_HSE_BYPASS=y

# Produce 96MHz clock at PLL output
CONFIG_CLOCK_STM32_PLL_M_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_N_MULTIPLIER=24
CONFIG_CLOCK_STM32_PLL_P_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_Q_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_R_DIVISOR=2

# Produce 25MHz clock at PLL2 P output
CONFIG_CLOCK_STM32_PLL2_ENABLE=y
CONFIG_CLOCK_STM32_PLL2_M_DIVISOR=4
CONFIG_CLOCK_STM32_PLL2_N_MULTIPLIER=100
#CONFIG_CLOCK_STM32_PLL2_N_FRACTION=6144
CONFIG_CLOCK_STM32_PLL2_P_ENABLE=y
CONFIG_CLOCK_STM32_PLL2_P_DIVISOR=16

# Use MCO2 as ethernet phy 25MHz clock source
CONFIG_CLOCK_STM32_MCO2_SRC_SYSCLK=n
CONFIG_CLOCK_STM32_MCO2_SRC_PLL2P=y
CONFIG_CLOCK_STM32_MCO2_DIV=1